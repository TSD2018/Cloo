<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity_AddNewLoo">

    <TextView
            android:text="@string/string_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:id="@+id/textView_AddNewLoo"/>
    <TextView
            android:text="@string/strings_address_default"
            android:layout_width="352dp"
            android:layout_height="61dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:id="@+id/textView_Address"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_GetLocation"/>
    <Button
            android:text="@string/strings_GetLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_GetLocation"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" android:layout_marginRight="4dp"
            tools:layout_editor_absoluteY="0dp" app:layout_constraintStart_toEndOf="@+id/textView_AddNewLoo"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/strings_SubmitButtonLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_Submit"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_LooRatingComments"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:id="@+id/ratingBar_addlocation" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_Address" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
    />
    <EditText
            android:layout_width="327dp"
            android:layout_height="105dp"
            android:inputType="textMultiLine|textCapSentences|textAutoComplete"
            android:ems="10"
            android:id="@+id/editText_LooRatingComments" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar_addlocation" android:hint="@string/strings_comments"/>
</android.support.constraint.ConstraintLayout>