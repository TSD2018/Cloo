<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:id="@+id/constraintItem">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewToiletName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@+id/imageViewSponsor" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:textSize="18sp"
            android:textColor="@color/design_default_color_primary_dark"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textviewCleaned"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/textViewDistance"
            app:layout_constraintStart_toStartOf="@+id/textViewRating"
    />
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textviewSponsor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" android:layout_marginRight="12dp"
            app:layout_constraintStart_toStartOf="@+id/imageViewSponsor" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewGender"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewRating"
            app:layout_constraintBaseline_toBaselineOf="@+id/textViewDistance"
            app:layout_constraintStart_toStartOf="@+id/textViewToiletName"
    />
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDistance" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintTop_toBottomOf="@+id/textViewToiletName"
            app:layout_constraintStart_toEndOf="@+id/textViewRating" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="119dp"
            android:layout_height="111dp" app:srcCompat="@android:drawable/picture_frame"
            android:id="@+id/imageViewSponsor"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="39dp" app:srcCompat="@drawable/both"
            android:id="@+id/imageViewGender"
            app:layout_constraintStart_toStartOf="@+id/textviewCleaned"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textviewCleaned"/>
</android.support.constraint.ConstraintLayout>