<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:map="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="150dp"
              android:id="@+id/map"
              tools:context=".MapsActivity_Directions"
              android:name="com.google.android.gms.maps.SupportMapFragment" map:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:text="@string/button_go"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/button_Navigate"
            app:layout_constraintStart_toEndOf="@+id/textView_loo_address"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView_loo_address"/>
    <RatingBar
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/ratingBar"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView_loo_address"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Loo address"
            android:layout_width="246dp"
            android:layout_height="41dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:id="@+id/textView_loo_address" android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Alerts: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:id="@+id/textView_alerts_label" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_features_label"/>
    <TextView
            android:text="Alert data"
            android:layout_width="291dp"
            android:layout_height="38dp"
            android:id="@+id/textView_Alert" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_feature"
            app:layout_constraintStart_toEndOf="@+id/textView_alerts_label" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:id="@+id/textView_clean_label" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_alerts_label"/>
    <TextView
            android:text="Features:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="17dp" android:id="@+id/textView_features_label"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/ratingBar"/>
    <TextView
            android:text="Feature data"
            android:layout_width="276dp"
            android:layout_height="28dp"
            android:id="@+id/textView_feature" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"
            app:layout_constraintStart_toEndOf="@+id/textView_features_label" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="1/1/1111 11:11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteX="17dp"
            android:id="@+id/textView_cleantimestamp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_clean_label"/>
    <TextView
            android:text="Maintained by:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="17dp" android:id="@+id/textView_JanitorLabel" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_cleantimestamp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="18dp" android:id="@+id/textview_JanitorName"
            app:layout_constraintTop_toBottomOf="@+id/textView_JanitorLabel" android:layout_marginTop="16dp"/>
    <Button
            android:text="Update Record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_Janitor" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="Clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:id="@+id/buttonClean" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>