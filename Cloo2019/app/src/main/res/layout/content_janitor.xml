<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_janitor"
        tools:context=".JanitorActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:map="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="150dp"
              android:id="@+id/map"
              tools:context=".MapsActivity_Directions"
              android:name="com.google.android.gms.maps.SupportMapFragment" map:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="Loo address"
            android:layout_width="88dp"
            android:layout_height="23dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:id="@+id/textView_loo_address_label"
            android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Latlng:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp" android:id="@+id/textView_latlng_label"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText_Loo_Address"/>
    <EditText
            android:layout_width="361dp"
            android:layout_height="46dp"
            android:inputType="none|textCapWords|textMultiLine"
            android:ems="10"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/editText_Loo_Address" android:hint="Address" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_loo_address_label"/>
    <ScrollView
            android:layout_width="368dp"
            android:layout_height="211dp" tools:layout_editor_absoluteX="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_Latlng">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="66dp" android:id="@+id/radiogroup_access"
                    tools:layout_editor_absoluteY="367dp">
                <RadioButton
                        android:text="Public"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_Public"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="Restricted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioButton_Restricted"
                        android:layout_weight="1"/>
                <RadioButton
                        android:text="Private"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioButtonPrivate"
                        android:layout_weight="1"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1">
                </LinearLayout>
            </RadioGroup>
            <TextView
                    android:text="Gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewGender"/>
            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="359dp"
                    tools:layout_editor_absoluteX="8dp" android:id="@+id/radiogroup_gender">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1">
                    <CheckBox
                            android:text="Gents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/checkBoxGents"
                            android:layout_weight="1"/>
                    <CheckBox
                            android:text="Ladies"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/checkBoxLadies"
                            android:layout_weight="1"/>
                    <CheckBox
                            android:text="UniSex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/checkBoxUniSex"
                            android:layout_weight="1"/>
                </LinearLayout>
            </RadioGroup>
            <TextView
                    android:text="Types"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewType"/>
            <CheckBox
                    android:text="Urinals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBoxUrinal"/>
            <CheckBox
                    android:text="Squatting Pan (Indian)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBoxIndianPan"/>
            <CheckBox
                    android:text="Commode (European)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBoxCommode"/>
            <TextView
                    android:text="Features:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="8dp" android:id="@+id/textView_Features"
                    tools:layout_editor_absoluteY="391dp"/>
            <CheckBox
                    android:text="Water"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBox_Water"/>
            <CheckBox
                    android:text="Soap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBox_Soap"/>
            <CheckBox
                    android:text="Electricity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBoxElectricity"/>
            <CheckBox
                    android:text="Door with Latches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBoxDoor"/>
            <CheckBox
                    android:text="Hand Dryer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBoxDryer"/>
            <CheckBox
                    android:text="Bucket, Mug"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBoxBucketMug"/>
            <CheckBox
                    android:text="Tissue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBox_Tissue"/>
            <CheckBox
                    android:text="Bidet or Fosset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBoxBidet"/>
            <CheckBox
                    android:text="Face Tissue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBoxFaceTissue"/>
            <CheckBox
                    android:text="Fresh Air Fan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBoxFreshAirFan"/>
            <CheckBox
                    android:text="Air Freshner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkBoxFreshner"/>
            <TextView
                    android:text="Maintained By:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewJanitorLabel"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:id="@+id/editTextJanitor"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editTextContact" android:inputType="phone" android:hint="Contact Number"/>
        </LinearLayout>
    </ScrollView>
    <TextView
            android:text="Latlng"
            android:layout_width="302dp"
            android:layout_height="20dp"
            android:id="@+id/textView_Latlng" app:layout_constraintStart_toEndOf="@+id/textView_latlng_label"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_Loo_Address"/>
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSave"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>


</android.support.constraint.ConstraintLayout>